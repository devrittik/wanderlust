<% layout('layouts/boilerplate') %>

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h1>Signup for WanderLust</h1>
            <form action="/signup" method="post" class="needs-validation" autocomplete="off" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label><br>
                    <input name="username" id="username" type="text" class="form-control" required>
                    <div class="valid-feedback">
                        Username Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a nice Username!
                    </div>
                </div><br>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label><br>
                    <input name="email" id="email" type="email" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter Your Email-Id!
                    </div>
                </div><br>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label><br>
                    <input name="password" id="password" type="password" class="form-control" autocomplete="new-password" required>
                    <div class="invalid-feedback">
                        Enter a valid Password!
                    </div>
                </div><br>
                <button type="submit" class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>